{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "outDir": "build",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@test/*": ["test/*"],
      "@api/*": ["src/api/*"],
      "@lib/*": ["src/lib/*"]
    },
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "config/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
